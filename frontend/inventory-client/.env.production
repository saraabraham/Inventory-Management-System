# Production environment variables for React build optimization

# API URL - Your existing production API endpoint
REACT_APP_API_URL=https://inventory-api-webapp-8b52885b.azurewebsites.net/api

# Existing setting
DISABLE_ESLINT_PLUGIN=true

# NEW: Disable source maps in production (reduces bundle size and improves security)
# This removes .map files from the build, saving 15-20 KiB
GENERATE_SOURCEMAP=false

# NEW: Don't inline the runtime chunk (better for caching)
# Keeps the runtime separate so it can be cached independently
INLINE_RUNTIME_CHUNK=false

# Image optimization settings (if using)
IMAGE_INLINE_SIZE_LIMIT=10000